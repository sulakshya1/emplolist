@{
    ViewBag.Title = "Dashboard";
}
<h2 class="las la-igloo">Dashboard</h2>
<br />
<hr />
<link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
<style>
    .body1 {
        margin: 10px;
        padding: 10px;
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        border-radius:10px;
    }

    .dashboard {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        height: 30vh;
    }

    .box {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 300px;
        height: 200px;
        margin: 10px;
        border-radius: 10px;
        text-decoration: none;
        color: #fff;
        font-size: 24px;
        font-weight: bold;
        background-color: #000;
        transition: background-color 0.3s;
    }

    .box-content {
        pointer-events: none;
    }

    .box:hover {
        background-color: #ccc;
        color: #000;
    }

    .box-container {
        display: flex;
    }
</style>
<div class="body1">
    <div class="dashboard">
        <div class="box-container">
            <a href="@Url.Action("Index1", "employees")" class="box peers">
                <span class="las la-users" size:50%/>
                    <span class="box-content">Peers</span>
                
            </a>
            <a href="@Url.Action("Index","uc")" class="box tasks">
                <span class="las la-tasks"/>
                    <span class="box-content">Tasks</span>
            </a>
            <a href="@Url.Action("Index","uc")" class="box notice">
                <span class="las la-info"/>
                    <span class="box-content">Notice</span>
            </a>
        </div>
    </div>
</div>


