@model IEnumerable<emplolist.Models.employee>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
<br />
<h2 class="las la-users">Peers</h2>
<hr />
<div class="body1">
    <div class="table-container">
        <div class="employee-table">
            @foreach (var emp in Model)
            {
                int index = Model.ToList().IndexOf(emp) + 1;
                string rowClass = index % 2 == 0 ? "table-row-even" : "table-row-odd";

                <a href="@Url.Action("Details1", new { id = emp.employee_id })" class="@rowClass">
                    <div class="table-cell">
                        <span class="table-cell-number">@index</span>
                        <span class="table-cell-text"><span class="las la-user-tie"/>@emp.first_name @emp.middle_name @emp.last_name</span>
                    </div>
                </a>
            }
        </div>
    </div>
</div>
<style>
    .body1 {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        border-radius: 10px;
    }

    .table-container {
        display: flex;
        justify-content: center;
    }

    .employee-table {
        width: 80%;
    }

    .table-row-odd {
        padding: 15px;
        margin-top: 10px;
        margin-bottom: 10px; /* Add space between each odd row */
        background-color: #222222;
        border-radius: 10px;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s;
        display: flex;
    }

    .table-row-even {
        padding: 15px;
        margin-bottom: 10px; /* Add space between each even row */
        background-color: #222222;
        border-radius: 10px;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s;
        display: flex;
    }

        .table-row-odd:hover,
        .table-row-even:hover {
            background-color: #ffffff;
        }

    .table-cell {
        display: flex;
        align-items: center;
        color: white;
        font-size: 16px;
        text-align: left;
        width: 100%;
    }

    .table-cell-number {
        min-width: 10px;
        margin-right: 10px;
    }

    .table-cell-text {
        flex: 1;
    }

    .table-row-odd:hover .table-cell,
    .table-row-even:hover .table-cell {
        color: #222222;
    }
</style>
